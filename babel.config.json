{
  "env": {
    "development": {
      "presets": [
        "@babel/preset-env",
        ["@babel/preset-react", { "runtime": "automatic" }]
      ],
      "plugins": [
        [
          "babel-plugin-module-resolver",
          {
            "root": ["./source/"],
            "alias": { "browser": "./source/browser/" }
          }
        ]
      ]
    }
  }
}
